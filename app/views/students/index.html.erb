<div class="page-header">
</div>

<%= link_to "View all attendances", attendances_path  %>

<h2>Attendance</h2>
<h3><%= @desired_date %></h3>

<%= form_tag(students_path, method: 'get') do %>
  <%= date_field_tag('desired_date', @desired_date) %>
  <%= submit_tag "Go!" %>
<% end %>

