<div class="page-header">
</div>

<div class="row" align="center">
  <% if @current_student.admin? %>
    <!-- This is where I'd put the logic to have the drop down menu to select students.
         But alas, I cannot get it to work and now I'm out of time -->
  <% end %>
  <table>                         
    <tr>                          
      <th><h4>Assignment Name</h4></th>
      <th><h4>Student Name</h4></th>
      <th><h4>Score</h4></th>
      <th><h4>Total</h4></th>
      <th><h4>Percentage</h4></th>
    </tr>
  <% @assignments.each do |assignment| %>       
    <tr>
      <td><%= assignment.assignment_name %></td>
      <td><%= assignment.student_name %></td>
      <td><%= assignment.score %></td>
      <td><%= assignment.total %></td>
      <td><%= assignment.percentage %></td>
    </tr>
  <% end %>
  </table> 

  <h4>Current Grade: <%= @average_grade %></h4>
</div>


